@model Patient
@{
    ViewBag.Title = "Registration";
}

<h2>Patient Registration</h2>

<form method="post">
    <div class="grid-container">
        <label asp-for="Name">Full Name: </label>
        <input type="text" asp-for="Name" class="form-control" />

        <label asp-for="Age">Age: </label>
        <input type="number" asp-for="Age" class="form-control" />

        <label asp-for="Address">Address: </label>
        <input type="text" asp-for="Address" class="form-control" />

        <label asp-for="Occupation">Occupation: </label>
        <input type="text" asp-for="Occupation" class="form-control" />

        <input type="checkbox" asp-for="HasInsurance" class="form-control" />
        <label asp-for="HasInsurance"> Has Insurance?</label>

        <input type="checkbox" asp-for="HasInsurance" class="form-control" />
        <label asp-for="HadPreviousOperation"> Had Previous Operation?</label>

        <label asp-for="MaritalStatus">Marital Status: </label>
        <select asp-for="MaritalStatus" class="form-control">
            <option value="Married">Married</option>
            <option value="Single">Single</option>
            <option value="Divorced">Divorced</option>
            <option value="Widowed">Widowed</option>
        </select>

        <button type="submit" class="btn btn-success">SAVE</button>
        <button asp-action="PatientList" class="btn btn-danger">CANCEL</button>
    </div>
</form>