@model IEnumerable<Patient>
@{
    ViewBag.Title = "Patient List";
}

<h2>Patient List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Patient Name</th>
            <th>Age</th>
            <th>Address</th>
            <th>Occupation</th>
            <th>Has Insurance?</th>
            <th>Had Previous Operation?</th>
            <th>Marital Status</th>
            <th>Creation Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Patient patient in Model)
        {
            <tr>
                <td>@patient.Name</td>
                <td>@patient.Age</td>
                <td>@patient.Address</td>
                <td>@patient.Occupation</td>
                <td>@(patient.HasInsurance ? "Yes" : "No")</td>
                <td>@(patient.HadPreviousOperation ? "Yes" : "No")</td>
                <td>@patient.MaritalStatus</td>
                <td>@patient.CreationTime</td>
            </tr>
        }
    </tbody>
</table>